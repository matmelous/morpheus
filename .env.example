# Server
APP_PORT=3200
NODE_ENV=development

# Where admin project creation/clone/scan happens.
DEVELOPMENT_ROOT=/development

# WhatsApp standalone (Baileys)
# Unique identifier used for inbound deduplication.
WHATSAPP_INSTANCE_ID=morpheus-standalone
# Local folder to store Baileys session/auth files.
WHATSAPP_AUTH_DIR=./data/whatsapp-auth

# Discord
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=
DISCORD_INSTANCE_ID=morpheus-discord
DISCORD_ALLOWED_GUILD_IDS=
DISCORD_ADMIN_USER_IDS=
DISCORD_MESSAGE_MAX_LENGTH=1900

# Auth - comma-separated list of authorized phone numbers (with country code, no +)
ALLOWED_PHONE_NUMBERS=INSERT_ALLOWED_PHONE_NUMBERS

# Admin - allowed to use "global" commands (comma-separated)
ADMIN_PHONE_NUMBERS=INSERT_ADMIN_PHONE_NUMBERS

# Projects - define projects in projects.json
DEFAULT_PROJECT_ID=sharp-bohr

# Orchestrator (planner) provider
ORCHESTRATOR_PROVIDER=gemini-cli

# OpenRouter (fallback)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemini-3-pro-preview
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenAI (audio transcription)
OPENAI_API_KEY=
OPENAI_TRANSCRIBE_MODEL=whisper-1

# Gemini CLI (planner + runner)
GEMINI_CLI_COMMAND=/Users/matheus/.nvm/versions/node/v22.16.0/bin/gemini
GEMINI_MODEL=gemini-3-pro-preview
GEMINI_OUTPUT_FORMAT=stream-json
GEMINI_APPROVAL_MODE=auto_edit

# Runners default
RUNNER_DEFAULT=codex-cli
RUNNER_MODULES_DIR=./runner-modules

# CLI commands (fallback to PATH if empty)
CODEX_CLI_COMMAND=/codex
CLAUDE_CLI_COMMAND=/claude
CURSOR_AGENT_COMMAND=/cursor-agent

# Cursor Agent CLI defaults
CURSOR_OUTPUT_FORMAT=stream-json
CURSOR_MODEL=auto
CURSOR_FORCE=true

# Claude Code CLI defaults
CLAUDE_MODEL=sonnet
CLAUDE_PERMISSION_MODE=bypassPermissions
CLAUDE_OUTPUT_FORMAT=stream-json
CLAUDE_VERBOSE=true

# Codex CLI defaults
CODEX_SANDBOX_MODE=danger-full-access
CODEX_SKIP_GIT_REPO_CHECK=true
CODEX_USE_DANGEROUSLY_BYPASS_APPROVALS=true

# Runtime limits
MAX_PARALLEL_TASKS=10
MAX_PARALLEL_GUI_TASKS=1
TASK_TIMEOUT_MS=1800000
PENDING_SELECTION_TTL_MS=120000

# Reports
REPORT_INTERVAL_MS=60000

# Planner (orchestrator) runtime
PLANNER_TIMEOUT_MS=120000
PLANNER_MAX_CONTEXT_MESSAGES=12
TOKEN_BUDGET_PLANNER_PER_CALL=12000
TOKEN_BUDGET_TASK_TOTAL=120000
TOKEN_BUDGET_SHARED_MEMORY_MAX=3000
TOKEN_ESTIMATOR_MODE=provider_fallback_estimate
TOKEN_NOTIFICATION_LEVEL=summary

# Storage
SQLITE_DB_PATH=./data/pmi.sqlite
RUNS_DIR=./runs
ARTIFACT_RETENTION_DAYS=7

# Media limits
MEDIA_MAX_BYTES=26214400
